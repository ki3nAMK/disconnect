{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"plugins": ["@nestjs/swagger"],
		"assets": [
			{
				"include": "served/**/*",
				"watchAssets": true
			},
			{
				"include": "modules/mails/templates/**/*",
				"watchAssets": true
			},
			{
				"include": "modules/*/seeds/**/*",
				"watchAssets": true
			},
			{
				"include": "i18n/**/*",
				"watchAssets": true
			}
		]
	}
}
